<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        >
<ImageView 
    android:id="@+id/user_logo1"
    android:layout_width="25dp"
    android:layout_height="25dp"  
    android:background="@drawable/user"
    />
  <TextView 
            android:id="@+id/user_logo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登陆"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            />
    <TextView 
            android:id="@+id/user_logo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注销"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:textColor="#3366FF"
            android:visibility="invisible"
            />
        
    </LinearLayout>

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="160dp"
    >
    <Button 
        android:id="@+id/fuwuyuan_but"
        android:layout_width="150dp"
        android:layout_height="170dp"
        
       
        android:background="@drawable/shezhi"
        
        />
   <Button 
        android:id="@+id/diancai_but"
        android:layout_width="145dp"
        android:layout_height="165dp"
        android:layout_toRightOf="@id/fuwuyuan_but"
        android:layout_marginLeft="170dp"
        
        android:background="@drawable/diancai"
        
        />
   
    </LinearLayout>
  </LinearLayout>
