<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/topbottom_frag"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal" 
    
    
    >
    
  
    
       <Button 
        android:id="@+id/liangcai_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:text="  凉菜"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:drawableLeft="@drawable/coldfood1"
        android:background="#00000000"
        android:layout_marginLeft="30dp"
        />
    
    <Button 
        android:id="@+id/recai_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:text="  热菜"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:drawableLeft="@drawable/hotfood"
        android:background="#00000000"
        android:layout_marginLeft="50dp"
        
        />
        
    <Button 
        android:id="@+id/tanglei_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:text="  汤类"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:drawableLeft="@drawable/soup"
        android:background="#00000000"
        android:layout_marginLeft="50dp"
        
        />
            
            
    <Button 
        android:id="@+id/drink_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"  
        android:text="饮料"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:drawableLeft="@drawable/drink"
        android:background="#00000000"
        
        android:layout_marginLeft="50dp"
        /> 
    
    
    

</LinearLayout>

      <ListView 
    android:id="@+id/listview_fragment"
    android:layout_width="match_parent"
    android:layout_height="0dp" 
    android:layout_weight="6" 
    android:divider="#0000"
    android:background="#ebebea"
        ></ListView>

    

</LinearLayout>
